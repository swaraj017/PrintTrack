<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invoice - <%= invoiceId %></title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.2/jspdf.umd.min.js"></script>
    <link rel="stylesheet" href="/css/invoice.css">
</head>
<body>
    <div class="container">
        <div class="headere" style="display: flex;">
            <div class="logo">
                <img src="https://www.freepnglogos.com/uploads/logo-3d-png/3d-company-logos-design-logo-online-2.png" alt="Company Logo" class="logo">  </div>
            <div class="company-info">
                <h1>PrintTrack</h1>
                
                  <p>Address: ABC Industries, MIDC Area, Nashik</p>
                  <p>City: Nashik, State: Maharashtra, ZIP: 422001</p>
                  <p>Phone: +91 123 456 7890</p>
                  <p>Email: contact@abcindustries.com</p>
                  <p class="gst-cin">GSTIN: 27ABCDE1234F1Z5 | CIN: U12345MH2010PLC123456</p> 
                </div>
                
        </div>
    <div class="invoice-details">
      <h2>Invoice Details</h2>
      <div class="invoice-details-grid">
        <div class="invoice-details-item">
          <span>Invoice Number</span>
          <span><%= invoiceId %></span>
        </div>
        <div class="invoice-details-item">
          <span>Order ID</span>
          <span><%= orderId %></span>
        </div>
        <div class="invoice-details-item">
          <span>Invoice Date</span>
          <span><%= invoiceDate %></span>
        </div>
        <div class="invoice-details-item">
          <span>Due Date</span>
          <span><%= dueDate %></span>
        </div>
      </div>
    </div>

    <div class="customer-details">
      <h3>Customer Details</h3>
      <table>
        <tr>
          <th>Customer ID</th>
          <td><%= customerId %></td>
        </tr>
        <tr>
          <th>Name</th>
          <td><%= customerName %></td>
        </tr>
        <tr>
          <th>Address</th>
          <td><%= customerAddress %></td>
        </tr>
        <tr>
          <th>Email</th>
          <td><%= customerEmail %></td>
        </tr>
      </table>
    </div>
    

    <div class="products">
      <h3>Products</h3>
      <table>
        <thead>
          <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            <tr>
              <td><%= product.productId %></td>
              <td><%= product.productName %></td>
              <td><%= product.quantity %></td>  
              <td>₹<%= product.price %></td>
              <td>₹<%= product.total %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <div class="total">
      <div class="status <%= status %>">
        <%= status %>
      </div>
      <p>Total Amount: ₹<%= totalAmount %></p>
    </div>

    <button id="downloadPdf" onclick="printInvoice();" style="margin-left: 25rem;">Print Invoice</button>
  </div>

  <script>
    function printInvoice() {
      window.print();
    }
  </script>
</body>
</html>
</html>
